

{% block body %}
    {{ form_start(form, {'attr': {'class': 'd-flex ml-3', 'action': path('cherche')} }) }}
        <div class="form-group mr-2">
            {{ form_widget(form.search, {'attr': {'class': 'form-control', 'placeholder': 'Rechercher un produit...'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.chercher, {'attr': {'class': 'btn btn-primary mx-2'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}