{% extends 'base.html.twig' %}

{% block title %}Ma Commande
{% endblock %}

{% block body %}


	<div class="container justify-content-center ">
		<div class="row">
			<div class="col-md-8">
				<h1 class="text-center text-primary mt-4">Validation du ma commande</h1>
			</div>
		</div>
		{{ include('partiales/flash.html.twig') }}

 {{ form_start(commandeForm, {'attr': {'novalidate': 'novalidate'}}) }}
		<div class="row">
			<div class="col-md-8">

				<div class="row mt-2">
					<small class=" mt-3">* Champs obligatoires</small>
				</div>
				<fieldset class="text-primary mt-3">
					<legend>Adresse de livraison</legend>
					<div class="row  mt-2">
						<div class="col">
							{{ form_row(commandeForm.adresse_livraison) }}
						</div>

					</div>
					<div class="row d-flex mt-2">
						<div class="col-md-6">
							{{ form_row(commandeForm.cp_livraison) }}
						</div>
						<div class="col-md-6">
							{{ form_row(commandeForm.ville_livraison) }}
						</div>

					</div>

				</fieldset>

				<fieldset class="text-primary mt-4">
					<legend>Adresse de facturation</legend>
					<div class="row d-flex mt-2">
						<div class="col">
							{{ form_row(commandeForm.adresse_facturation) }}
						</div>

					</div>
					<div class="row d-flex mt-2">
						<div class="col-md-6">
							{{ form_row(commandeForm.cp_facturation) }}
						</div>
						<div class="col-md-6">
							{{ form_row(commandeForm.ville_facturation) }}
						</div>

					</div>

				</fieldset>
				<div class="row  mt-2">
					<div class="text-primary col-md-4">
						{{ form_row(commandeForm.mode_paiement) }}
					</div>

				</div>
				

			</div>
			<div class="card col-md-4 border-success    mb-3 mx-4" style="max-width: 20rem;right: 20px">

					<div class="card-body ">
						{% include 'commande/recapitulatif.html.twig' %}
						{# <button type="submit" class="btn btn-success mt-3 commande">Payer ma commande ({{totalTTC}} â‚¬)</button> #}
						<button type="submit" class="btn btn-success mt-3 commande">Payer ma commande</button>
						

					</div>
				</div>

		</div>

	</div>

				{{ form_end(commandeForm) }}

{% endblock %}
