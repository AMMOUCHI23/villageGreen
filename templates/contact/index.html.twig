{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        {{ form_start(form) }}
        {# Afficher le message flash #}
          <div class="row my-3">
            <div class="col-md-10 justify-content-center">
                {{ include('partiales/flash.html.twig') }}
            </div>
        </div>
        <div class="row my-3">
            <div class="col-md-10 text-center text-primary">
                <h1>Contactez-nous!</h1>
            </div>
        </div>

          <div class="row my-3">
            <div class="col-md-10">
                <p>* Champs obligatoires</p>
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.nom) }}
            </div>
            <div class="col">
                {{ form_row(form.prenom) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.email) }}
            </div>
            <div class="col">
                {{ form_row(form.telephone) }}
            </div>
        </div>
        <div class="row ">
            <div class="col-12">
                {{ form_row(form.sujet) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.message) }}
            </div>
        </div>
        <div class="row ">
            <div class="col text-end mt-4">
                <button type="submit" class="btn btn-lg btn-primary">Envoyer</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
